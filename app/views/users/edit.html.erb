<div class="users">
<div class='account-page'>
    <div class='account-page-left'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to  "ログアウト", destroy_user_session_path, method: :delete, class: 'btn' %>
    </div>
    <div class='account-page-right'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>